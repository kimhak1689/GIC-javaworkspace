
public class ex03{

	public static void main (String[] args){
		
		int n = 6;
		int m = 25;
		int l = 5;
		// Exercise A.
		exerciseA(n,m);
		// Exercise B.
		exerciseB(l);
	}
	// Exercise A.
	public static void exerciseA(int n, int m) {
        for (int i = 1; i <= n; i++){
            for (int j = 1; j <= m; j++){
                if (i == 1 || i == n ||
                    j == 1 || j == m) 
                	// printing stars
                    System.out.print("*"); 
             // ending line after each row
                else
                    System.out.print(" ");           
            }
            System.out.println();
        }
        System.out.print("\n");
    }
	// Exercise B.
	public static void exerciseB(int l) {
		for(int i = 0; i < l; i = i+2){
            for(int j = 0; j <= i; j = j++)
            {
                // printing stars
                System.out.print("* ");
            }
            // ending line after each row
            System.out.println();
        }
	}
	
}