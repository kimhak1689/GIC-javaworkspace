
public class ex03{

	public static void main (String[] args){
		// Exercise A.
		int n = 6;
		int m = 25;
		exerciseA(n,m);
		// Exercise B.
	}
	// Exercise A.
	public static void exerciseA(int n, int m) {
    	int i, j;
        for (i = 1; i <= n; i++){
            for (j = 1; j <= m; j++){
                if (i == 1 || i == n ||
                    j == 1 || j == m) 
                	// printing stars
                    System.out.print("*"); 
             // ending line after each row
                else
                    System.out.print(" ");           
            }
            System.out.println();
        }
    }
	// Exercise B.
	public static void exerciseB() {
		for(i=0; i<n; i++){
            for(j=0; j<=i; j++)
            {
                // printing stars
                System.out.print("* ");
            }
 
            // ending line after each row
            System.out.println();
        }
	}
	
}